rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para medicamentos
    match /medications/{document} {
      allow read, write: if true; // Temporalmente permitir todo acceso
    }
    
    // Reglas para recordatorios
    match /reminders/{document} {
      allow read, write: if true; // Temporalmente permitir todo acceso
    }
    
    // Reglas para horarios de recordatorios
    match /reminder_schedules/{document} {
      allow read, write: if true; // Temporalmente permitir todo acceso
    }
  }
} 